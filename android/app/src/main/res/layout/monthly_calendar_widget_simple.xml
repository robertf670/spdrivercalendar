<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widget_background"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- Header with month/year and refresh button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/widget_header_bg"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        
        <TextView
            android:id="@+id/widget_month_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="January 2024"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/widget_header_text"
            android:layout_centerInParent="true" />
        
        <TextView
            android:id="@+id/widget_refresh_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="â†»"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/widget_header_text"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Refresh"
            android:clickable="true"
            android:focusable="true" />
    </RelativeLayout>

    <!-- Simple calendar display using a single TextView for now -->
    <TextView
        android:id="@+id/widget_calendar_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading calendar..."
        android:textSize="12sp"
        android:textColor="@color/widget_text_primary"
        android:gravity="center"
        android:padding="16dp"
        android:minHeight="200dp" />

</LinearLayout>

